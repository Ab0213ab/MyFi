@page
@model MyFi.Pages.Budgets.IndexModel
@{
    ViewData["Title"] = "Budgets";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Budgets</h2>
        @if (Model.Budgets.Any())
        {
            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                    + Create
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-page="Create">New Blank Budget</a></li>
                    <li><a class="dropdown-item" asp-page="CreateFromTemplate">From Template</a></li>
                </ul>
            </div>
        }
    </div>

    @if (!Model.Budgets.Any())
    {
        <div class="text-center py-5 border rounded bg-light">
            <p class="lead mb-4">You haven’t created any budgets yet.</p>
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-lg dropdown-toggle" data-bs-toggle="dropdown">
                    + Create Budget
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-page="Create">New Blank Budget</a></li>
                    <li><a class="dropdown-item" asp-page="CreateFromTemplate">From Template</a></li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var budget in Model.Budgets)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@budget.Name</h5>
                            <p class="card-text small mb-2">
                                Total: @budget.TotalAmount.ToString("C")
                            </p>
                            <p class="card-text small text-muted mb-3">
                                Expenses: @Model.GetExpenseCount(budget.Id)
                            </p>
                            <a class="btn btn-outline-primary btn-sm"
                               asp-page="Details" asp-route-id="@budget.Id">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
