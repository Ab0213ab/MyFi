@page
@model MyFi.Pages.Budgets.CreateModel
@{
    ViewData["Title"] = "Create Blank Budget";
}

<h2>Create New Budget</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <div class="mb-3">
        <label asp-for="Budget.Name" class="form-label">Name</label>
        <i class="bi bi-info-circle"
           data-bs-toggle="tooltip"
           data-bs-placement="right"
           title="What do you want to call this budget?"></i>
        <input asp-for="Budget.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Budget.Description" class="form-label">Description</label>
        <i class="bi bi-info-circle"
           data-bs-toggle="tooltip"
           data-bs-placement="right"
           title="What is this budget for?"></i>
        <textarea asp-for="Budget.Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Budget.TotalAmount" class="form-label">Total Amount</label>
        <i class="bi bi-info-circle"
           data-bs-toggle="tooltip"
           data-bs-placement="right"
           title="How much money will you allocate to this budget?"></i>
        <input asp-for="Budget.TotalAmount" class="form-control" type="number" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
