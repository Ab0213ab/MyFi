@page
@model MyFi.Pages.Budgets.CreateModel
@{
    ViewData["Title"] = "Create Blank Budget";
}

<h2>Create New Budget</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <div class="mb-3">
        <label asp-for="Budget.Name" class="form-label"></label>
        <input asp-for="Budget.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Budget.Description" class="form-label"></label>
        <textarea asp-for="Budget.Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Budget.TotalAmount" class="form-label"></label>
        <input asp-for="Budget.TotalAmount" class="form-control" type="number" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
