<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyFi</title>
    <!-- Using both bootswatch cdn and local bootstrap for offline use -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/lux/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyFi.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a class="navbar-brand" asp-area="" asp-page="/Dashboard">MyFi</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-page="/LandingIndex">MyFi</a>
                }
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/Dashboard">Home</a>
                            } 
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/LandingIndex">Home</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/PrivacyIndex">Privacy</a>
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Index">Admin</a>
                            }
                        </li>
                    </ul>


                    <!-- Right-aligned items -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item me-2 d-flex align-items-center">
                                <span class="navbar-text">Hello, @User.Identity!.Name</span>
                            </li>
                            <li class="nav-item">
                                <!-- Identity’s Logout endpoint only accepts POST and expects an antiforgery token -->
                                <form method="post"
                                      asp-area="Identity"
                                      asp-page="/Account/Logout"
                                      asp-route-returnUrl="@Url.Page("/Dashboard")"
                                      class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MyFi - <a asp-area="" asp-page="/PrivacyIndex">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
